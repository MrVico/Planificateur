<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univtln.maxremvi.view.ViewPollViewController">
    <children>
        <VBox layoutX="200.0" spacing="15">
            <children>
                <StackPane>
                    <Button fx:id="sharePoll" onAction="#handleSharePollButtonClick" mnemonicParsing="false" text="Partager" StackPane.alignment="TOP_RIGHT" />
                </StackPane>
                <GridPane hgap="10" vgap="10">
                    <children>
                        <Text fx:id="title" GridPane.columnIndex="1" />
                        <Text fx:id="place" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Titre" />
                        <Label text="Lieu" GridPane.rowIndex="2" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description" GridPane.rowIndex="1" />
                        <Text fx:id="description" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                </GridPane>
                <Label contentDisplay="RIGHT" text="Date de rendez-vous">
                    <graphic>
                        <LocalDateTimeTextField fx:id="proposed_date" />
                    </graphic>
                </Label>
                <HBox>
                    <TableView fx:id="table_dates" prefHeight="150" />
                </HBox>
            <StackPane prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleValidateAnswerButtonClick" text="Valider rÃ©ponse" />
                  <Button fx:id="updatePoll" mnemonicParsing="false" onAction="#handleUpdatePollButtonClick" text="Modifier le sondage" visible="false" StackPane.alignment="BOTTOM_LEFT" />
               </children>
            </StackPane>
            </children>
         <opaqueInsets>
            <Insets top="100.0" />
         </opaqueInsets>
        </VBox>
    </children>
</AnchorPane>
