<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.112"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univtln.maxremvi.view.CreatePollController">
    <children>
        <VBox layoutX="200.0">
            <children>
                <GridPane hgap="10" vgap="10">
                    <children>
                        <TextField GridPane.columnIndex="1" fx:id="title"/>
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="location_poll"/>
                        <Label text="Titre"/>
                        <Label text="Lieu" GridPane.rowIndex="1"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description" GridPane.rowIndex="2"/>
                        <TextArea prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="description_poll"/>

                        <VBox fillWidth="false" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <RadioButton fx:id="radio_public" selected="true" styleClass="custom-jfx-radio-button"
                                         text="Public">
                                <toggleGroup>
                                    <ToggleGroup fx:id="toggleGroup"/>
                                </toggleGroup>
                            </RadioButton>
                            <RadioButton fx:id="radio_private_sharable" maxHeight="-Infinity" selected="false"
                                         styleClass="custom-jfx-radio-button" text="Privé mais partageable"
                                         toggleGroup="$toggleGroup"/>
                            <RadioButton fx:id="radio_private" selected="false" styleClass="custom-jfx-radio-button"
                                         text="Privé" toggleGroup="$toggleGroup"/>
                        </VBox>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Visibilité" GridPane.rowIndex="3"/>
                    </children>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>
                    <columnConstraints>
                        <ColumnConstraints/>
                        <ColumnConstraints/>
                    </columnConstraints>
                </GridPane>
                <CheckBox fx:id="possibility_add_dates_checkbox">
                    <graphic>
                        <Label text="Possibilité d'ajouter des dates"/>
                    </graphic>
                </CheckBox>
                <Label contentDisplay="RIGHT" text="Date de fin de sondage">
                    <graphic>
                        <LocalDateTimeTextField fx:id="end_date"></LocalDateTimeTextField>
                    </graphic>
                </Label>
                <HBox>
                    <Label contentDisplay="RIGHT" text="Date de rendez-vous">
                        <graphic>
                            <LocalDateTimeTextField fx:id="proposed_date"></LocalDateTimeTextField>
                        </graphic>
                    </Label>
                    <Button text="Ajouter date" onAction="#handleAddDate"></Button>
                </HBox>
                <HBox>
                    <TableView fx:id="table_dates" prefHeight="150"></TableView>
                </HBox>
                <Button text="Créer le sondage" onAction="#handleCreatePollButton"></Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
